<p id="notice"><%= notice %></p>

<h3><%= link_to 'New Fact', new_fact_path %></h3>
<center>
<% @facts.each do |fact| %>
  <div style="max-width: 500px; margin-top: 100px">
    <h3><%= fact.body %></h3>
    <%= image_tag fact.image, style: "max-width: 500px" %>
  </div>
  <%= link_to 'Show', fact %>
  <%= link_to 'Edit', edit_fact_path(fact) %>
  <%= link_to 'Destroy', fact, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
</center>

<br>


